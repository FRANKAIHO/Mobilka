<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Styles.Resources.Styles.MyStyles">

    <!-- Стили для кнопок -->
    <Style TargetType="Button" x:Key="ButtonStyleBase">
        <Setter Property="TextColor" Value="Yellow" />
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyleBase}" x:Key="ButtonStyle1">
        <Setter Property="CornerRadius" Value="50" />
        <Setter Property="BackgroundColor" Value="Blue" />
        <Setter Property="Padding" Value="20" />
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyleBase}" x:Key="ButtonStyle2">
        <Setter Property="CornerRadius" Value="100" />
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="Padding" Value="60" />
    </Style>

    <!-- Стили для Лейблов -->

    <Style TargetType="Label" x:Key="LabelStyleBase">
        <Setter Property="TextColor" Value="Red" />
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource LabelStyleBase}" x:Key="LabelStyle1">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style TargetType="Label" BasedOn="{StaticResource LabelStyleBase}" x:Key="LabelStyle2">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="HorizontalOptions" Value="End" />
    </Style>


</ResourceDictionary>