<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TabElementAndreev.Views.ThirdView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Мой профиль">

    <ScrollView>
        <VerticalStackLayout>
            <!--<Label
                Padding="10"
                FontAttributes="Bold"
                FontSize="16"
                Text=""
                VerticalOptions="Center" />-->

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Padding="10"
                    FontSize="14"
                    HorizontalOptions="Start"
                    Text="Профиль" />

                <Label
                    Grid.Row="1"
                    Padding="10"
                    FontSize="14"
                    HorizontalOptions="Start"
                    Text="Друзья" />

                <Label
                    Grid.Row="2"
                    Padding="10"
                    FontSize="14"
                    HorizontalOptions="Start"
                    Text="Группы" />

                <Label
                    Grid.Row="3"
                    Padding="10"
                    FontSize="14"
                    HorizontalOptions="Start"
                    Text="Сообшения" />

                <Label
                    Grid.Row="4"
                    Padding="10"
                    FontSize="14"
                    HorizontalOptions="Start"
                    Text="Уведомления" />

                <Label
                    Grid.Row="5"
                    Padding="10"
                    FontSize="14"
                    HorizontalOptions="Start"
                    Text="Настройки" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>