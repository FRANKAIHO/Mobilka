<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PersonalBudgetAndreev.AddTransactionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Добавление траты">

    <VerticalStackLayout
        Padding="30,20"
        Spacing="20"
        VerticalOptions="Center">

        <Entry
            x:Name="TitleEntry"
            MinimumHeightRequest="40"
            Placeholder="Заголовок траты" />

        <Editor
            x:Name="DescriptionEntry"
            AutoSize="TextChanges"
            MinimumHeightRequest="40"
            Placeholder="Описание траты" />

        <Entry
            x:Name="AmountEntry"
            Keyboard="Numeric"
            MinimumHeightRequest="40"
            Placeholder="Кол-во потраченных денег" />

        <Button Clicked="AddTransaction" Text="Добавить" />

    </VerticalStackLayout>

</ContentPage>