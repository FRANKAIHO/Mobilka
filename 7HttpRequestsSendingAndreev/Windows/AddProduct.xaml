<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HttpRequestsSendingAndreev.Windows.AddProduct"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AddProduct">
    <ScrollView>

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Entry x:Name="TitleEntry" Placeholder="Название" />

            <Entry x:Name="DescriptionEntry" Placeholder="Описание продукта" />

            <Button
                Background="LightBlue"
                Clicked="AddProduct_Cliked"
                Text="Добавить"
                TextColor="Black" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>