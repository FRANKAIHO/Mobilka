<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HttpRequestsSendingAndreev.Windows.ProductIdSearch"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:HttpRequestsSendingAndreev.Models"
    Title="ProductIdSearch">

    <VerticalStackLayout>
        <ScrollView>
            <VerticalStackLayout Padding="30,0" Spacing="25">

                <Entry x:Name="IdEntry" Placeholder="Введите Id продукта" />
                <Button
                    x:Name="SearchId"
                    Clicked="Search_Click"
                    Text="Найти" />

                <VerticalStackLayout Spacing="5">

                    <HorizontalStackLayout Spacing="5">
                        <Label FontSize="14" Text="Id:" />
                        <Label x:Name="Id" FontSize="14" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="5">
                        <Label FontSize="18" Text="Title:" />
                        <Label x:Name="Title" FontSize="18" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Description:" TextColor="Grey" />
                        <Label x:Name="Description" FontSize="14" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Created At:" TextColor="Grey" />
                        <Label x:Name="CreatedAt" FontSize="14" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Updated At:" TextColor="Grey" />
                        <Label x:Name="UpdatedAt" FontSize="14" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>


            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>