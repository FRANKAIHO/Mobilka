<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HttpRequestsSendingAndreev.Windows.UpdateProduct"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="UpdateProduct">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="Center">

            <Entry x:Name="IdEntry" Placeholder="Введите id товара" />

            <Entry x:Name="TitleEntry" Placeholder="Введите новое название товара" />

            <Entry x:Name="DescriptionEntry" Placeholder="Введите новое описание товара" />

            <Button Clicked="Update_Clicked" Text="Обновить товар из каталога" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>