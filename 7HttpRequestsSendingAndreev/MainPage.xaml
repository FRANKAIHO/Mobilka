<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HttpRequestsSendingAndreev.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Button
                Clicked="GoToAddProductPage"
                Text="Добавить продукт"
                TextColor="White" />

            <Button
                Margin="0,10"
                Clicked="GoToShowProductPage"
                HorizontalOptions="Center"
                Text="Каталог продуктов" />

            <Button
                Margin="0,10"
                Clicked="GoToShowProductByIdPage"
                HorizontalOptions="Center"
                Text="Поиск продукта" />

            <Button
                Clicked="GoToUpdateProductPage"
                Text="Обновить информацию о продукте"
                TextColor="White" />

            <Button
                Clicked="GoToRemoveProductPage"
                Text="Удалить продукт"
                TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
